{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"outDir": "dist"
	},
	"typeRoots": [
		"./node_modules/@types",
		"./src"
	],
	"include": [
		"src/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	],

	"lib": ["es2015", "dom"]
}